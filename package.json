{
  "name": "nodejs-clean-architecture-api",
  "version": "2.2.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "husky": "husky install",
    "up": "yarn build && docker-compose up -d",
    "down": "docker-compose down",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "dev": "sucrase-node src/main/server.ts",
    "start": "nodemon -L --watch ./dist ./dist/main/server.js",
    "debug": "node --inspect=0.0.0.0:9222 --nolazy dist/main/server.js",
    "test": "jest --passWithNoTests",
    "test:ci": "yarn test --coverage",
    "test:staged": "yarn test --findRelatedTests",
    "test:unit": "yarn test --watch -c jest-unit-config.js ",
    "test:integration": "yarn test --watch -c jest-integration-config.js",
    "test:coveralls": "yarn test:ci && coveralls < coverage/lcov.info"
  },
  "prettier": {
    "singleQuote": false,
    "tabWidth": 2,
    "arrowParens": "avoid",
    "semi": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongodb": "^3.6.6",
    "nodemon": "^2.0.7",
    "validator": "^13.6.0"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.4",
    "@types/bcrypt": "^3.0.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mongodb": "^3.6.12",
    "@types/node": "^14.14.41",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "git-commit-msg-linter": "^3.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "mockdate": "^3.0.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
